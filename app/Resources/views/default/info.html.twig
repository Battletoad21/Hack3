{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="/"><p class="text-center">Retour à l'accueil</p></a>
                <section class="offset-4" style="border: 1px black;">
    <div class="tamere" style="border-color: black">
                    {% for data in data %}
                        <div class="col-12">


                        <div class="row">
                            <div style="background-color: orange" class="col-4">
                                <h2 class="right">{{ data.name }}</h2>
                                <h6>{{ data.weather.0.description }}</h6>
                            </div>
                        </div>
                        <div class="col-6">
                                <div class="row">
                                  <div class="col-4">
                                        <h1 style="font-size: 50px; font-weight: bold; margin-top: 40px">{{ data.main.temp }}°C</h1>
                                    </div>
                                    <div style="font-size: 15px" class="col-4">
                                        <p class="text-right">Details</p>
                                        <hr>
                                        <p style="margin: 0;" class="text-right">T° min : {{ data.main.temp_min }} </p>
                                        <p style="margin: 0;" class="text-right">T° max : {{ data.main.temp_max }} </p>
                                        <p style="margin: 0;" class="text-right">Humidité : {{ data.main.humidity }}% </p>
                                        <p style="margin: 0;" class="text-right">Vent : {{ data.wind.speed }} m/s </p>
                                    </div>
                                </div>
                            <div class="col-8">
                                <hr>
                                <p class="text-right">{{ "now"|date("m/d/Y H:i:s") }}</p>
                            </div>
                        </div>
                        </section>
                        </div>
        </div>
                        </div>



                {#{{ dump(data) }}#}

                    {% endfor %}




                <table class="table table-stripped">
                    <tr>
                        <th>Code Insee</th>
                        <th>Commune</th>
                        <th>Date d'indice supervise</th>
                        <th>Écheance</th>
                        <th>Date d'echeance</th>
                        <th>Qualité de l'air</th>
                        <th>Polluant responsable</th>
                    </tr>
                    {% for test in test %}
                    <tr style="background-color: {{ test.couleurCarteGe }}">
                        <td>{{ test.codeInsee }}</td>
                        <td>{{ test.commune }}</td>
                        <td>{% if test.dateIndiceSupervise %}{{ test.dateIndiceSupervise|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ test.echeance }}</td>
                        <td>{% if test.dateEcheance %}{{ test.dateEcheance|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ test.libelleQualiteAir }}</td>
                        <td>{{ test.libellePolluantResponsable }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <input type="hidden" id="lon" value="{{ lon }} ">
    <input type="hidden" id="lat" value="{{lat }} ">
    <br>
    <h1 class="text-center">CarteQualité de l'Air</h1>
    <div  id='map'  style='height:380px;'  />

    <link  rel="stylesheet"  href="http://cdn.leafletjs.com/leaflet-0.7.5/leaflet.css"  />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script  src="http://cdn.leafletjs.com/leaflet-0.7.5/leaflet.js"></script>

    <script>
        var  OSM_URL  =  'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png';
        var  OSM_ATTRIB  =  '&copy;  <a  href="http://openstreetmap.org/copyright">OpenStreetMap</a>  contributors';
        var  osmLayer  =  L.tileLayer(OSM_URL,  {attribution:  OSM_ATTRIB});

        var  WAQI_URL    =  "https://tiles.waqi.info/tiles/usepa-aqi/{z}/{x}/{y}.png?token=_TOKEN_ID_";
        var  WAQI_ATTR  =  'Air  Quality  Tiles  &copy;  <a  href="http://waqi.info">waqi.info</a>';
        var  waqiLayer  =  L.tileLayer(WAQI_URL,  {attribution:  WAQI_ATTR});
        console.log();
        var  map  =  L.map('map').setView([$('#lat').val(),$('#lon').val()],  9);
        map.addLayer(osmLayer).addLayer(waqiLayer);
    </script>

{% endblock %}
